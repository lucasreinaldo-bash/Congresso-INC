<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    tools:context=".Registro">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/topo_qr" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_programa"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_programa_cientifico" />

                    <Button
                        android:id="@+id/btn_palestrantes"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"

                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_palestrantes" />

                    <Button
                        android:id="@+id/btn_mapadocongresso"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_mapa_congresso" />


                    <Button
                        android:id="@+id/btn_perguntePalestrante"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_pergunte_palestrante" />

                    <Button
                        android:id="@+id/btn_explorar_foz"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_explore_foz" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_minhaAgenda"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"

                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        android:background="@drawable/btn_minha_agenda" />


                    <Button
                        android:id="@+id/btn_patrocinadores_expositores"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"

                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_patrocinadores_expositores" />


                    <Button
                        android:id="@+id/btn_comochegar"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"

                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_como_chegar" />


                    <Button
                        android:id="@+id/btn_enquete"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_enquetes" />

                    <Button
                        android:id="@+id/btn_programa_social"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_programa_social" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_qr_code"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="124dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="119dp"
            android:layout_height="71dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_qr_code_menu" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="257dp"
            android:layout_height="59dp"
            android:layout_above="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_acesso_sala" />

        <Button
            android:id="@+id/btn_concluir_inscricao"
            android:layout_width="330dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_concluir_inscricao"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_ver_qr"
            android:layout_width="330dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/img_vizualizar_qr_code"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>